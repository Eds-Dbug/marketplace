<!DOCTYPE html>
<html lang="en">

<head>
  <title>Post-Item</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!--
  ****************************************************************************
    EXTERNAL RESOURCES
  ******************************************************************************-->

  <!-- FONT AWESOME LINK -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
    integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!--
****************************************************************************
  EXTERNAL STYLE SHEETS
******************************************************************************-->
  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  <!-- LAYOUT CSS CSS-->
  <link rel="stylesheet" href="/styles/layout.css" />
  <!-- MAIN CSS-->
  <link rel="stylesheet" href="/styles/inbox.css" />
  <!-- HEADER CSS-->
  <link rel="stylesheet" href="/styles/header.css" />
  <!-- ITEM CSS-->
  <link rel="stylesheet" href="/styles/item.css" />
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />


  <!--
****************************************************************************
  JS SCRIPTS
******************************************************************************-->
  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <!-- Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"></script>


</head>

<body>
  <header>
    <%- include('partials/_header') %>
   
  </header>
  <main>
    
    <section class="your-items">
      <h2 class="buy-header">
        Continue your conversation with your potential buyers:
      </h2>

      <!-- ITEM 1 -->
      <% for (let convo of buyerData) { %>
      <article class="item">
        <section class="sub-sect1">
          <div class="seller-info">
            <img src="<%= convo.seller_pic %>" alt="SELLER AVATAR" class="profile-pic">
            <h5><%= convo.seller_username %></h5>
          </div>

          <div class="item-img">
            <img src="<%= convo.item_pic %>" alt="ITEM IMG" style="width: inherit;">
          </div>
        </section>

        <section class="sub-sect2">
          <h5>
            <span><%= convo.item_title %></span>
          </h5>
          <span><%= convo.item_price %></span>
        </section>

        <section class="sub-sect3">
          <a href="/messages/<%= convo.convo_id %>">Message Buyer</a>
        </section>

      </article>
      <% } %>

      <h2 class="buy-header">
        Continue your conversation with your sellers:
      </h2>

      <!-- ITEM 1 -->
      <% for (let convo of sellerData) { %>
      <article class="item">
        <section class="sub-sect1">
          <div class="seller-info">
            <img src="<%= convo.buyer_pic %>" alt="BUYER AVATAR" class="profile-pic">
            <h5><%= convo.buyer_username %></h5>
          </div>

          <div class="item-img">
            <img src="<%= convo.item_pic %>" alt="ITEM IMG" style="width: inherit;">
          </div>
        </section>

        <section class="sub-sect2">
          <h5>
            <span><%= convo.item_title %></span>
          </h5>
          <span><%= convo.item_price %></span>
        </section>

        <section class="sub-sect3">
          <a href="/messages/<%= convo.convo_id %>">Message Seller</a>
        </section>

      </article>
      <% } %>

    </section>

  </main>

</body>

</html>