<body>
  <header>
    <%- include('partials/_header') %>
  </header>
  <main>

  <section class="your-items">

      <article class="latest-message"> LAST MESSAGE HERE</article>

         <!-- ITEM 1 -->
         <article class="item">
          <section class="sub-sect1">
            <div class="seller-info">
              <img src="" alt="SELLER AVATAR">
              <h5> SELLER NAME</h5>
            </div>

            <div class="item-img">
              <img src="" alt="ITEM IMG">
            </div>
          </section>

          <section class="sub-sect2">
              <h5>
                <span>ITEM TITLE</span>
              </h5>
              <span>$PRICE</span>
              <textarea name="item-description" class="item-description" cols="60" rows="6"></textarea>
          </section>

          <section class="sub-sect3">
            <div>
              Favourite this item
            <i class="fa-solid fa-star"></i>
            </div>
            <button>Message Seller</button>
          </section>

        </article>

    </section>

  </main>

