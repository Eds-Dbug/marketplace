<body>
  <header>
    <%- include('./partials/_header.ejs'); %>
  </header>

  <main>

    <section class="post-item-section">
      <h2 class="post-item-heading">Post New Item</h2>
      <form class="post-item-form"  method="post" action="/post-item">

        <div class="headings">

          <div class="item-name">
            <h5>New item</h5>
            <input
                  class="form-control"
                  type="text"
                  name="itemName"
                  placeholder="Enter a name"
                  required="true"
                  style="margin-bottom: 1em"
            />
          </div>

          <div class="img-url">
              <h5>New image</h5>
              <input
                    class="form-control"
                    type="text"
                    name="imgUrl"
                    placeholder="Enter image url"
                    required="true"
                    style="margin-bottom: 1em"
              />
          </div>


            <div class="price">
              <h5>List a price</h5>
              <input
                    class="form-control"
                    type="text"
                    name="price"
                    placeholder="Enter a price"
                    required="true"
                    style="margin-bottom: 1em"
              />
            </div>


          <div class="type">
            <h5>Choose a type</h5>
            <button class="dropbtn">Dropdown</button>
            <div class="dropdown">

              <select id="cars" name="type" size="3" required=true>
                <option value="car">car</option>
                <option value="house">house</option>
                <option value="toy">toy</option>
                <option value="soul">soul</option>
                <option value="boy-toy">boy-toy</option>
              </select>
            </div>
        </div>
        </div>

        <textarea class="description" type="text" name="description" cols="0" rows="10" placeholder="Enter description"></textarea>
          <button class="post-item" type="submit">Post</button>

      </form>
    </section>

  </main>

</body>
</html>
