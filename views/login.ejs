  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <script defer src="/scripts/loginError.js"></script>

  </head>
<body>
  <header>
    <%- include('./partials/_header.ejs'); %>
  </header>

  <main>

    <section class="login-section">
      <h2 class="login-heading">Login</h2>
      <label class="error" id="error" ><i class="fa-solid fa-triangle-exclamation" ><span> </span></i> </label>

      <form method="post" action="/login" id="login-form">
        <div class="email-input">
          <div >
            <h5>User name</h5>
            <input
                  id="user-name-input"
                  class="form-control"
                  type="text"
                  name="uname"
                  placeholder="User name"
                  required=true
                  style="margin-bottom: 1em"
            />
          </div>

          <div >
            <h5>Password</h5>
            <input
                  id="password-input"
                  class="form-control"
                  type="password"
                  name="password"
                  placeholder="Password"
                  required=true
                  style="margin-bottom: 1em"
            />
          </div>

          
          <button class="login-submit" type="submit">Login</button>
        </div>
      </form>
    </section>

  </main>

</body>
</html>
