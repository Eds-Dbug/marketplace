<body>
  <header>
    <%- include('./partials/_header.ejs'); %>
  </header>

  <main>

    <section class="login-section">
      <h2 class="login-heading">The Market Place</h2>
      <p>Sign in to The Market Place or create an account</p>
      <label class="error" id="error" ><i class="fa-solid fa-triangle-exclamation" ><span> </span></i> </label>

      <form method="post" action="/login" id="login-form">
        <div class="email-input">
          <div >
            <input
                  id="user-name-input"
                  class="form-control"
                  type="text"
                  name="uname"
                  placeholder="Enter your email or username"
                  required=true
                  style="margin-bottom: 1em"
            />
          </div>

          <div >
            <input
                  id="password-input"
                  class="form-control"
                  type="password"
                  name="password"
                  placeholder="Password"
                  required=true
                  style="margin-bottom: 1em"
            />
          </div>

          <button class="login-submit" type="submit">Login</button>
        </div>
      </form>
    </section>

  </main>

</body>
</html>
